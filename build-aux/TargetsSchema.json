{
	"$schema": "https://json-schema.org/draft-07/schema#",
	"type": "object",
	"properties": {
		"programs": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"description": "Target name",
						"type": "string"
					},
					"dependencies": {
						"description": "Target dependencies",
						"type": "array",
						"uniqueItems": true,
						"items": {
							"type": "string"
						}
					},
					"unix-only": {
						"description": "Is the target UNIX only?",
						"type": "boolean"
					},
					"override-src": {
						"type": "string",
						"description": "Override source directory NAME (the directory itself must, still, exist in ../src)"
					}
				},
				"required": ["name"]
			}
		},
		"units": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"description": "Target name",
						"type": "string"
					},
					"dependencies": {
						"description": "Target dependencies",
						"type": "array",
						"uniqueItems": true,
						"items": {
							"type": "string"
						}
					},
					"unix-only": {
						"description": "Is the target UNIX only?",
						"type": "boolean"
					}
				},
				"required": ["name"]
			}
		}
	}
}
